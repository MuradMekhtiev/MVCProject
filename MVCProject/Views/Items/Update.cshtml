@model MVCProject.Models.Entity.Item
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("UpdateData", "Items", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.ItemID)
        @Html.TextBoxFor(m => m.ItemID, new { @class = "form-control" })
    </div>
    <br />
    <div class="form-group">
        @Html.LabelFor(m => m.ItemName)
        @Html.TextBoxFor(m => m.ItemName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Brand)
        @Html.TextBoxFor(m => m.Brand, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ItemCategory)
        @Html.DropDownListFor(m => m.Category.CategoryID, (List<SelectListItem>)ViewBag.vls, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ItemCost)
        @Html.TextBoxFor(m => m.ItemCost, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Stock)
        @Html.TextBoxFor(m => m.Stock, new { @class = "form-control" })
    </div>
    <div>
        <button class="btn btn-warning">Update</button>
    </div>
}

